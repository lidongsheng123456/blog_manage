<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.LoginMapper">
    <!--定义需要返回的字段-->
    <sql id="baseColumnList">
        id,username,pwd,name,phone,email,img_url,role
    </sql>

    <!--prefix：sql的最前前缀，suffixOverrides：去掉最后的逗号，suffix：sql的最后的后缀-->
    <!--注册-->
    <insert id="register">
        insert into blog_account
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="id != null">id,</if>
            <if test="username != null">username,</if>
            <if test="pwd != null">pwd,</if>
            <if test="name != null">name,</if>
            <if test="imgUrl != null">img_url,</if>
            <if test="role != null">role,</if>
            <if test="phone != null">phone,</if>
            <if test="email != null">email,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffixOverrides="," suffix=")">
            <if test="id != null">#{id},</if>
            <if test="username != null">#{username},</if>
            <if test="pwd != null">#{pwd},</if>
            <if test="name != null">#{name},</if>
            <if test="imgUrl != null">#{imgUrl},</if>
            <if test="role != null">#{role},</if>
            <if test="phone != null">#{phone},</if>
            <if test="email != null">#{email},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <!--登录-->
    <select id="login" resultType="com.example.common.pojo.dto.UserDto">
        select *
        from blog_account
        where username = #{username}
          and pwd = #{pwd}
    </select>

    <!--按照用户id查询-->
    <select id="selectById" resultType="com.example.common.pojo.entity.User">
        select
        <include refid="baseColumnList"/>
        from blog_account
        where id=#{id}
    </select>
</mapper>
